<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body>
  
  <header>
    <% include ../partials/nav_bar %>
  </header>
  
  <div class='container hero'>
  
    <div class='user_nav'>
      <% include ../partials/user_nav %>
    </div>


    <div class='row'>
      
      <div class='col s10 offset-s1'>
      
      <form action="/api/users/<%= user._id %>" method="post">
      
        <div class='row card-panel hoverable'>
        
          <div class='col s4'>
            <h5>Basic Info</h5>
          </div>
          <div class='col s8'>
            
            <div class='row'>
              <div class='col s6'>
                <div class="input-field">
                  <input id="firstName" type="text" class="validate" name="firstName" value='<%= user.firstName%>'>
                  <label for="firstName">First Name</label>
                </div>
              </div>
              <div class='col s6'>
                <div class="input-field">
                  <input id="lastName" type="text" class="validate" name="lastName" value='<%= user.lastName%>'>
                  <label for="lastName">Last Name</label>
                </div>
              </div>
            </div>
            <div class='row'>
              <div class='col s6'>
                <div class="input-field">
                  <input id="email" type="text" class="validate" name="email" value='<%= user.email %>'>
                  <label for="email">Email</label>
                </div>
              </div>
              <div class='col s6'>
                <div class="input-field">
                  <input id="firmName" type="text" class="validate" name="firmName" value='<%= user.firmName %>'>
                  <label for="firmName">Firm Name</label>
                </div>
              </div>
            </div>
         
          </div>
        </div>
        
        <div class='row card-panel hoverable'>
          <div class='col s4'>
            <h5>Contact Info</h5>
          </div>
          <div class='col s8'>
            <div class='row'>
              <div class='col s6'>
                <div class="input-field">
                  <input id="phone" type="text" class="validate" name="phone" value='<%= user.phone %>'>
                  <label for="phone">Phone</label>
                </div>
              </div>
              <div class='col s6'>
                <div class="input-field">
                  <input id="fax" type="text" class="validate" name="fax" value='<%= user.fax %>'>
                  <label for="fax">Fax</label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class='row card-panel hoverable'>
        
          <div class='col s4'>
            <h5>Address</h5>
          </div>
        
          <div class='col s8'>
            <div class='row'>
              <div class="input-field col s6">
                <input id="street" type="text" class="validate" name="address[street]" value='<%= user.address.street %>'>
                <label for="street">Street</label>
              </div>
              <div class="input-field col s6">
                <input id="city" type="text" class="validate" name="address[city]" value='<%= user.address.city %>' >
                <label for="city">City</label>
              </div>
            </div>
            <div class='row'>
              <div class="input-field col s6">
                <input id="state" type="text" class="validate" name="address[state]" value='<%= user.address.state %>'>
                <label for="state">State</label>
              </div>
              <div class="input-field col s6">
                <input id="zip" type="text" class="validate" name="address[zip]" value='<%= user.address.zip %>' >
                <label for="zip">Zip</label>
              </div>
            </div>
          </div>
          
        </div>
        
        <div class='row card-panel hoverable'>
          <div class='col s4'>
            <h5>Bar Information</h5>
          </div>
          <div class='col s8'>
            <div class='row'>
              <div class="input-field col s6">
                <select multiple>
                  <option value="" disabled selected>Choose your option</option>
                  <option value="1">Option 1</option>
                  <option value="2">Option 2</option>
                  <option value="3">Option 3</option>
                </select>
                <label>Materialize Select</label>
              </div>
              <div class="col s6">
                <ul>
                    <% user.statesLicensed.forEach(function(state) { %>
                        <li><%= state.state %> : <%= state.barNumber %></li>
                    <% }); %>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class='row center-align'>
          <button class="btn waves-effect waves-light" type="submit">Submit</button>
        </div>
        
      </form>
      
      </div>
      
      
    </div>
    
  </div>
  
          
  <footer>
    <% include ../partials/footer %>
  </footer>
  
  
</body>


</html>