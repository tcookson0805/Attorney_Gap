                  <input type="checkbox" id="test6" />
                  <label for="test6"></label>
  	            </form>
              </div>	
            </div>
            <div class='col s6 btn requested_action_edit center-align'>
            	<a href="/home/appearances/edit_appearance/<%= requestId %>" class="waves-effect waves-light">Edit / Delete</a>
